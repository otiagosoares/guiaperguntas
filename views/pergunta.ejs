<%- include('partials/header.ejs'); %>

<%- include('partials/navbar.ejs'); %>

    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <hr>
                <h1><%= pergunta.titulo %></h1>
                <hr>
                <p class="lead"><%= pergunta.descricao %></p>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <form method="POST" action="/responder"  >
                    <div class="form-group">
                        <label for="corpo">Digite sua Resposta:</label>
                        <textarea class="form-control" name="corpo" id="corpo" rows="3"></textarea>
                    </div>
                    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
                    <button type="submit" class="btn btn-primary">Responder</button>
                </form>
            </div>
        </div>  
        <div class="row">
            <div class="col-sm-12">
               <h3>Respostas</h3>
               <hr>
               <% respostas.forEach( resposta => { %>

                <div class="card">
                    <div class="card-header">
                        Respondido em: 
                        <%= new Date(resposta.createdAt)
                            .toLocaleDateString()
                            .substr(0, 10)
                            .split('-')
                            .reverse()
                            .join('/')%>  
                    </div>
                    <div class="card-body">
                        <%= resposta.corpo %> 
                    </div>
                </div>
                <br>

               <% })%>
            </div>
        </div>  
    </div>

<%- include('partials/footer.ejs'); %>